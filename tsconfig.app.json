{
  "compilerOptions": {
    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    
    "composite": true,       // ✅ Required for project references
    "declaration": true,     // ✅ Emit .d.ts files
    "emitDeclarationOnly": true  // ✅ Only emit .d.ts, skip JS build
  },
  "include": ["src/**/*"]
}
